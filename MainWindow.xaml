<Window x:Class="Contact.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contact"
        mc:Ignorable="d"
        Title="MY CONTACTS" Height="700" Width="570">

    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Margin="5" Padding="10" CornerRadius="10" 
                         Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel Margin="10" Background="Beige">
            <TextBlock x:Name="fname" FontSize="20" Margin="5" HorizontalAlignment="Center" FontFamily="Britannic Bold" Foreground="RosyBrown">First Name:</TextBlock>
            <TextBox x:Name="fnameTB" Margin="5" Width="150" HorizontalAlignment="Center"/>
            <TextBlock x:Name="lname" FontSize="20" Margin="5" HorizontalAlignment="Center" FontFamily="Britannic Bold" Foreground="RosyBrown">Last Name:</TextBlock>
            <TextBox x:Name="lnameTB" Margin="5" Width="150" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Pnum" FontSize="20" Margin="5" HorizontalAlignment="Center" FontFamily="Britannic Bold" Foreground="RosyBrown">Phone Number:</TextBlock>
            <TextBox x:Name="PnumTB" Margin="5" Width="150" HorizontalAlignment="Center"/>
            <TextBlock x:Name="email" FontSize="20" Margin="5" HorizontalAlignment="Center" FontFamily="Britannic Bold" Foreground="RosyBrown">E-mail:</TextBlock>
            <TextBox x:Name="emailTB" Width="150" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock x:Name="gender" FontSize="20" Margin="5" HorizontalAlignment="Center" FontFamily="Britannic Bold" Foreground="RosyBrown">Gender</TextBlock>
            <ComboBox x:Name="genderCB" Margin="5" Width="100" HorizontalAlignment="Center">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>
            <TextBlock x:Name="CategoryTB" FontSize="20" Margin="5" HorizontalAlignment="Center" FontFamily="Britannic Bold" Foreground="RosyBrown">Category</TextBlock>
            <ComboBox x:Name="CategoryCB" Margin="5" Width="100" HorizontalAlignment="Center" DisplayMemberPath="Name" SelectedValuePath="id">
            </ComboBox>
            <Button x:Name="Manage" Click="Manage_Click" Margin="5" Width="135" Background="GhostWhite" Foreground="RosyBrown" FontSize="15" FontFamily="Britannic Bold">Manage Categories</Button>

            <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Add" Click="Add_Click" Margin="5" Width="90" Background="GhostWhite" Foreground="RosyBrown" FontSize="15" FontFamily="Britannic Bold">Add Contact</Button>
                <Button x:Name="Edit" Click="Edit_Click" IsEnabled="False" Margin="5" Width="90" Background="GhostWhite" Foreground="RosyBrown" FontSize="15" FontFamily="Britannic Bold">Edit Contact</Button>
                <Button x:Name="Delete" Click="Delete_Click" IsEnabled="False" Margin="5" Width="110" Background="GhostWhite" Foreground="RosyBrown" FontSize="15" FontFamily="Britannic Bold">Delete Contact</Button>
                <Button x:Name="Clear" Click="Clear_Click" Margin="5" Width="110" Background="GhostWhite" Foreground="RosyBrown" FontSize="15" FontFamily="Britannic Bold">Clear Fields</Button>
            </StackPanel>

            <ListView x:Name="list" Width="500" SelectionChanged="list_SelectionChanged" Height="190">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" CornerRadius="10" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Fname}" FontWeight="Bold" FontSize="16" />
                                    <TextBlock Text="{Binding Lname}" FontWeight="Bold" FontSize="14" />
                                    <TextBlock Text="{Binding PhoneNumber}" Foreground="Gray" />
                                    <TextBlock Text="{Binding email}" FontStyle="Italic" />
                                    <TextBlock Text="{Binding gender}" FontStyle="Italic" />
                                </StackPanel>
                                <Border Margin="0,10,0,0" Height="1" Background="#E0E0E0" />
                                <TextBlock Text="{Binding Category.Name}" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="Green" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackPanel>
    </Grid>
</Window>
